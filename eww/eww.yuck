; === window for wallpaper ===

(defwindow background
  :monitor 0
  :geometry (geometry :width "100%"
                      :height "100%"
                      :anchor "center")
  :stacking "bg"
(box :class "background-image" :valign "fill" :halign "fill"))

; === window for system info ===

