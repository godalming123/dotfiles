(include "./imports/bar-items.yuck")
(include "./imports/background-widgets.yuck")
(include "./imports/variables.yuck")
(include "./imports/widgets.yuck")
(include "./imports/settings-menu.yuck")

; === define bar ===

(defwindow bar
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :width "100%"
                      :height "30px"
                      :anchor "bottom center")
  :exclusive true
  ;:stacking barStacking ; doesnt work
  :stacking "fg"
  (centerbox :orientation "h"
    (leftStuff)
    (centerStuff)
    (rightStuff)
  )
)

; === define background information windows ===

(defwindow time
  :monitor 0
  :geometry (geometry :width "310px"
                      :height "340px"
                      :anchor "top right"
                      :y "30px"
                      :x "30px")
  :exclusive true
  :stacking "bg"
  (time-widget :class "bg-info")
)

(defwindow resorces
  :monitor 0
  :geometry (geometry :width "310px"
                      :height "250px"
                      :anchor "top right"
                      :y "390px"
                      :x "30px")
  :exclusive true
  :stacking "bg"
  (resorces-widget)
)

; === define app menu ===

(defwindow menu
  :monitor 0
  :geometry (geometry :width "300px"
                      :height "500px"
                      :anchor "bottom left"
                      :y "10px"
                      :x "10px")
  :stacking "overlay"
  :focusable true
(searchapps))

